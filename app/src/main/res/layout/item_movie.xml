<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_poster_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/image_view_poster"
                android:layout_width="80dp"
                android:layout_height="110dp" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/text_view_original_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Original title"
            android:fontFamily="sans-serif-medium"
            android:textColor="#222222"
            android:textSize="18sp"
            android:layout_alignTop="@+id/card_view_poster_container"
            android:layout_toEndOf="@+id/card_view_poster_container"/>

        <TextView
            android:id="@+id/text_view_overview"
            android:layout_width="match_parent"
            android:fontFamily="sans-serif-light"
            android:textColor="#535050"
            android:padding="6dp"
            android:layout_below="@+id/text_view_original_title"
            android:text="Thus is the overview of the movie. and the overview describes the movie in a short manner..whatever!!"
            android:layout_toEndOf="@+id/card_view_poster_container"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_view_popularity"
            android:layout_width="match_parent"
            android:text="Popularity"
            android:textColor="#009688"
            android:padding="6dp"
            android:fontFamily="sans-serif"
            android:layout_toEndOf="@id/card_view_poster_container"
            android:layout_below="@+id/text_view_overview"
            android:layout_height="wrap_content" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>